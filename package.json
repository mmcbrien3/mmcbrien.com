{
  "name": "mmcbrien.com",
  "version": "1.0.0",
  "description": "Matt McBrien's personal website",
  "scripts": {
    "install-reqs": "gem install bundler && bundle install && npm install",
    "clean": "rm -rf _site/ && npm run babel_clean | exit 0",
    "jekyll": "bundle exec jekyll build",
    "babel_clean": "for f in $(find . -name '*.ts' -not -path './node_modules/*'); do rm \"${f%.*}\".js; done",
    "babel": "find . -name '*.ts' -not -path './node_modules/*' | xargs -I {} babel {} --extensions .ts --out-dir ./ --relative",
    "build": "npm run babel && npm run jekyll && npm run babel_clean",
    "serve": "http-server _site/",
    "release": "npm run clean && npm run build && npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mmcbrien3/mmcbrien.com.git"
  },
  "author": "Matt McBrien",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mmcbrien3/mmcbrien.com/issues"
  },
  "homepage": "https://github.com/mmcbrien3/mmcbrien.com#readme",
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.4",
    "@types/jquery": "^3.5.16",
    "http-server": "^14.1.1"
  }
}
